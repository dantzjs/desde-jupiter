---
import { IconBrandLinkedin, IconBrandGithub } from '@tabler/icons-react';
import Layout from '@layouts/Base.astro';
import { Image } from 'astro:assets';
import avatar from '@assets/images/avatar.jpg';
import { defaultDescription } from '@config/config';
import StackSection from '@components/Stack';
import AboutSection from '@components/About';
---

<Layout title="Desde Júpiter" description={defaultDescription}>
  <main class="w-4/5 lg:w-1/2 m-auto">
    <section
      class="mt-8 flex flex-col-reverse md:flex-row justify-center items-center m-auto"
    >
      <div class="flex-1 flex flex-col gap-y-4">
        <h1 class="text-3xl md:text-5xl font-bold max-w-2xl">
          José D. Gutiérrez <span class="max-w-fit block text-base font-normal"
            >@Dantzjs</span
          >
        </h1>
        <p class="mb-4 max-w-lg">
          Ing. Telecomunicaciones / Backend Developer / DevOps
        </p>
        <div class="flex items-center">
          <!-- <a
            href="#"
            rel="noreferrer"
            class="flex items-center mr-4 border-2 border-primary w-fit px-4 py-1 cursor-pointer hover:text-primary transition-colors"
          >
            <IconFiles className="inline mr-2" />CV
          </a> -->
          <a
            href="https://www.linkedin.com/in/dantzjs/"
            target="_blank"
            rel="noreferrer"
            class="flex items-center mr-4 border-2 w-fit px-4 py-1 cursor-pointer hover:text-primary transition-colors"
          >
          <IconBrandLinkedin className="inline mr-2" />LinkedIn
          </a>
          <a
            href="https://github.com/dantzjs"
            target="_blank"
            rel="noreferrer"
            class="flex items-center mr-4 border-2 w-fit px-4 py-1 cursor-pointer hover:text-primary transition-colors"
          >
          <IconBrandGithub className="inline mr-2" />GitHub
          </a>
        </div>
      </div>
      <div class="avatar m-auto">
        <div
          class="rounded-full w-20 md:w-30 lg:w-40 ring ring-primary mb-6 sm:mb-0 ring-offset-base-100 ring-offset-2"
        >
          <Image src={avatar} alt="avatar" />
        </div>
      </div>
    </section>

    <AboutSection/>
    <StackSection />
  </main>
</Layout>
